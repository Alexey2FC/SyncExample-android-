<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.faiz.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:text="Главное меню"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Тест спиннера"
                android:onClick="startActivityTestElements"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Список сущностей"
                android:onClick="startEntityList"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Форма сущности"
                android:onClick="startEntityForm"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="One Way Sync Entity List"
                android:onClick="one_way_sync_entity_list"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Two Ways Sync Entity List"
                android:onClick="two_ways_sync_entity_list"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sync All"
                android:onClick="sync_all"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Database Manager"
                android:onClick="database_manager"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Recreate Tables"
                android:onClick="recreate_all"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
