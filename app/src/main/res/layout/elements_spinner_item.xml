    <TextView
        android:gravity="center_vertical"
        android:background="#00FF00"
        android:layout_weight="1"
        android:id="@android:id/text1"
        android:padding="2dp"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        />
    <TextView
        android:gravity="center_vertical"
        android:layout_weight="1"
        android:id="@android:id/text2"
        android:padding="2dp"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        />

</LinearLayout>
